{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-joplin-notes",
  "title": "search joplin notes",
  "description": "search and view in your joplin notes",
  "icon": "Joplin-icon.svg",
  "author": "tomoron",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "search joplin notes",
      "description": "search joplin notes",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "joplin_token",
      "type": "password",
      "title": "Joplin Token",
      "required": true,
      "description": "You can get this token from the Joplin desktop application, on the Web Clipper Options screen.",
      "placeholder": "Joplin Token"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.57.2",
    "node-fetch": "^3.3.2",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
